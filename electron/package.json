{
  "name": "dev2ndbrain",
  "version": "1.1.8",
  "description": "Desktop wrapper for Dev2ndBrain",
  "main": "build/main.cjs",
  "scripts": {
    "build:frontend": "cd ../frontend && npm install && npm run build:electron",
    "build:electron": "tsc",
    "publish:backend": "dotnet publish ../backend -c Release -r win-x64 --output ./build/backend",
    "start": "npm run build:frontend && tsc && electron .",
    "package": "npm run build:frontend && npm run build:electron && npm run publish:backend && electron-builder"
  },
  "author": {
    "name": "Erwin Wilson Ceniza",
    "email": "erwinwilsonceniza@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.2.1",
    "electron-log": "^5.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.dev2ndbrain.app",
    "productName": "Dev2ndBrain",
    "files": [
      "build/**/*",
      "help.html"
    ],
    "extraResources": [
      {
        "from": "build/backend",
        "to": "backend"
      },
      {
        "from": "../frontend/dist",
        "to": "frontend"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/dev2ndbrain.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/dev2ndbrain.icns"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}