{
  "name": "dev2ndbrain-desktop",
  "version": "1.0.0",
  "description": "Desktop wrapper for Dev2ndBrain",
  "main": "build/main.cjs",
  "scripts": {
    "build:frontend": "cd ../frontend && npm install && npm run build:electron",
    "build:electron": "tsc",
    "start": "npm run build:frontend && npm run build:electron && electron .",
    "package": "npm run build:frontend && npm run build:electron && electron-builder"
  },
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.14.2",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.dev2ndbrain.app",
    "productName": "Dev2ndBrain",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}